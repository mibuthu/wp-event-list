<?xml version="1.0"?>

<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="phpcs.xsd" name="WordPress-plugin-comment-guestbook">

    <!-- Settings -->
    <description>WordPress Coding Standards with some adaptions</description>
    <file>src</file>
    <arg name="basepath" value="." />
    <arg name="colors" />
    <arg name="extensions" value="php" />
    <arg name="report" value="full" />
    <arg name="parallel" value="8" />

    <!-- Rules -->
    <rule ref="WordPress">
        <exclude name="WordPress.WP.I18n.TranslatorsCommentWrongStyle" />
	    <exclude name="WordPress.WP.I18n.MissingTranslatorsComment" />
        <!-- <exclude name="Universal.Arrays.DisallowShortArraySyntax" /> -->
        <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar" />
        <exclude name="Squiz.Commenting.FunctionComment.ParamCommentFullStop" />
        <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody" />
    </rule>
    <rule ref="PHPCompatibilityWP" />
    <!-- <rule ref="Generic.Arrays.DisallowLongArraySyntax" /> -->

    <!-- Rule settings -->
    <config name="minimum_wp_version" value="6.9" /> <!-- for WordPress -->
    <config name="testVersion" value="8.4-"/> <!-- for PHPCompatibilityWP -->

    <!-- Rule properties -->
    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="strict_class_file_names" type="bool" value="false" />
        </properties>
    </rule>
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="event-list" />
                <element value="default" />
            </property>
        </properties>
    </rule>
    <rule ref="WordPress.WP.DeprecatedFunctions">
        <properties>
            <property name="minimum_wp_version" value="6.9" />
        </properties>
    </rule>
    <rule ref="WordPress.WhiteSpace.ControlStructureSpacing">
        <properties>
            <property name="blank_line_check" value="true" />
        </properties>
    </rule>
    <rule ref="WordPress.Arrays.MultipleStatementAlignment">
        <properties>
            <property name="ignoreNewlines" value="false" />
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.FunctionSpacing">
        <properties>
            <property name="spacing" value="2" />
            <property name="spacingAfterLast" value="1" />
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.MemberVarSpacing">
        <properties>
            <property name="spacing" value="1" />
            <property name="spacingBeforeFirst" value="1" />
        </properties>
    </rule>
    <rule ref="WordPress.Security.EscapeOutput">
        <properties>
            <property name="customEscapingFunctions" type="array">
                <element value="admin_url" />
                <element value="get_submit_button" />
            </property>
            <property name="customAutoEscapedFunctions" type="array">
                <element value="PLUGIN_URL" />
            </property>
        </properties>
    </rule>

    <!-- Temporary disabled rules to hide unfixed issues -->
    <rule ref="Wordpress">
        <exclude name="Squiz.Commenting.FileComment.Missing" />
        <exclude name="Squiz.Commenting.VariableComment.Missing" />
        <exclude name="Squiz.Commenting.FunctionComment.Missing" />
        <exclude name="WordPress.Security.NonceVerification.Missing" />
        <exclude name="WordPress.Security.NonceVerification.Recommended" />
    </rule>

</ruleset>
